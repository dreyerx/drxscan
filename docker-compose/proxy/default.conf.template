server {
    listen       8085;
    listen       443 ssl;
    server_name  storage.dreyerx.com;
    proxy_http_version 1.1;

    ssl_certificate /etc/nginx/ssl/storage/ssl.pem;
    ssl_certificate_key /etc/nginx/ssl/storage/ssl.key;

    autoindex on;
    root /data/storage;
    
    sendfile on;
    sendfile_max_chunk 2m;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;

    location / {
        try_files $uri $uri/ =404;
    }
}

